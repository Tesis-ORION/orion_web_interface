---
import ThemeSwitcher from '../components/ThemeSwitcher.jsx';
import '../styles/header.css';
---
<header id="page-header" class="fixed top-0 left-0 right-0 z-50">
  <div class="container mx-auto px-4 mt-4">
    <div class="header-box flex justify-between items-center py-4 px-4 rounded-lg">
      <a
        href="/"
        data-view-transition
        class="flex items-center uppercase font-bold transition-colors duration-200 font-zen text-[#990A2C]"
      >
        orion
      </a>
      <nav class="hidden md:block">
        <ul class="flex gap-6">
          <li>
            <a
              class="text-sm font-zen"
              href="/about"
              data-view-transition
            >About</a>
          </li>
          <li>
            <a
              class="text-sm font-zen"
              href="/howToUse"
              data-view-transition
            >How To Use</a>
          </li>
          <li>
            <a
              class="text-sm font-zen"
              href="/demo"
              data-view-transition
            >Demo</a>
          </li>
        </ul>
      </nav>
      <ThemeSwitcher client:load />
    </div>
  </div>
</header>
