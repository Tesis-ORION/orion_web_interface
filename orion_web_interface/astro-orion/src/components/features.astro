---
import { Icon } from "astro-icon/components";
import ContentSection from "../components/content-section.astro";
import type { FeatureItem } from "../types";

const features: Array<FeatureItem> = [
  {
    title: "Procesamiento de lenguaje natural.",
    description:
      "Atravez de microfonos o texto Orion puede tener conversaciones y seguir comandos a traves del lenguage natural de cualquier persona.",
    icon: "mdi:account-plus",
  },
  {
    title: "Vision por computadora.",
    description:
      "Orion cuenta con camaras de profundidad y sensores que le permiten identificar su entorno y atraves de IA interactuar con el.",
    icon: "mdi:television-ambient-light",
  },
  {
    title: "Integracion y simulacion con ROS2.",
    description:
      "Orion cuenta con el sistema de robotica ROS2 para su funcionamiento, ademas, tiene modelos de simulacion para que no sea necesario tener el robot fisico.",
    icon: "mdi:robot-excited",
  },
];
---

<ContentSection title="Features" id="features">
  <Fragment slot="lead">
    Orion tiene 3 funciones principales para la Interaccion  <span class="gradient-text">Humano-robot</span>,
    estas 3 funciones pueden ser probadas en la <span class="gradient-text">demo</span>demo actual del proyecto.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl gradient-text">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
